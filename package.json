{
	"name": "ocean-cookbook",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "npm run smui-theme-light",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"start-emulators": "firebase emulators:start"
	},
	"devDependencies": {
		"@playwright/test": "^1.36.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.3",
		"@sveltejs/vite-plugin-svelte": "^2.4.2",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.63.6",
		"smui-theme": "^7.0.0-beta.14",
		"svelte": "^4.0.5",
		"svelte-adapter-firebase": "^0.15.0",
		"svelte-check": "^3.4.6",
		"tslib": "^2.6.0",
		"typescript": "^4.9.5",
		"vite": "^4.4.3",
		"vitest": "^0.25.8"
	},
	"type": "module",
	"dependencies": {
		"@material/typography": "^14.0.0",
		"@smui-extra/autocomplete": "^7.0.0-beta.14",
		"@smui/button": "^7.0.0-beta.14",
		"@smui/chips": "^7.0.0-beta.14",
		"@smui/common": "^7.0.0-beta.14",
		"@smui/dialog": "^7.0.0-beta.14",
		"@smui/icon-button": "^7.0.0-beta.14",
		"@smui/list": "^7.0.0-beta.14",
		"@smui/menu": "^7.0.0-beta.14",
		"@smui/menu-surface": "^7.0.0-beta.14",
		"@smui/segmented-button": "^7.0.0-beta.14",
		"@smui/textfield": "^7.0.0-beta.14",
		"@smui/top-app-bar": "^7.0.0-beta.14",
		"eslint-plugin-svelte": "^2.32.2",
		"firebase": "^9.23.0",
		"firebase-admin": "^11.10.0",
		"firebase-functions": "^4.4.1",
		"format-quantity": "^2.1.0",
		"fuse.js": "^6.6.2",
		"parse-ingredient": "^0.6.0",
		"uuid": "^9.0.0"
	}
}
