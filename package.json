{
	"name": "ocean-cookbook",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "npm run smui-theme-light",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"start-emulators": "firebase emulators:start",
		"sync": "svelte-kit sync"
	},
	"devDependencies": {
		"@playwright/test": "^1.36.0",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.2.0",
		"prettier-plugin-svelte": "^3.2.0",
		"sass": "^1.63.6",
		"smui-theme": "^7.0.0",
		"svelte": "^4.2.8",
		"svelte-check": "^3.4.6",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.0",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"dependencies": {
		"@material/typography": "^14.0.0",
		"@smui-extra/autocomplete": "^7.0.0",
		"@smui/button": "^7.0.0",
		"@smui/checkbox": "^7.0.0",
		"@smui/chips": "^7.0.0",
		"@smui/common": "^7.0.0",
		"@smui/dialog": "^7.0.0",
		"@smui/icon-button": "^7.0.0",
		"@smui/list": "^7.0.0",
		"@smui/menu": "^7.0.0",
		"@smui/menu-surface": "^7.0.0",
		"@smui/segmented-button": "^7.0.0",
		"@smui/textfield": "^7.0.0",
		"@smui/top-app-bar": "^7.0.0",
		"algoliasearch": "^4.22.0",
		"eslint-plugin-svelte": "^2.39.0",
		"firebase": "^10.12.0",
		"firebase-admin": "^12.1.0",
		"firebase-functions": "^5.0.1",
		"format-quantity": "^3.0.0",
		"parse-ingredient": "^1.2.0",
		"uuid": "^9.0.0"
	}
}
